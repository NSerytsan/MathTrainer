@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="d-flex align-content-center flex-column">
    <form action="Problem.cshtml">
    <div class="input-group d-flex flex-column">
        
        <label for="argument">Число</label>
        <input type="number" id="argument" min="1"/>

        <div class="d-flex flex-row">
            <label  for="in-order">По порядку</label>
            <input  type="checkbox" id="in-order" onchange="order_box()"/>
        </div>

        <div id="p-num">
            <label for="problem-number">Кількість прикладів</label>
            <input type="number" id="problem-number" min="1"/>
        </div>
    </div>
    </form>
    <br />
    <button type="button" class="button--start" onclick="start()">Почати</button>
</div>
<script src="~/js/problem_script.js"></script>
